#!/usr/bin/make -f

BUILDDIR = build

# secondly called by launchpad
build:
	mkdir $(BUILDDIR);
	cd $(BUILDDIR); cmake -DCMAKE_INSTALL_PREFIX=../debian/tmp -DCMAKE_BUILD_TYPE=Release ../source
	make -j2 -C $(BUILDDIR)

# thirdly called by launchpad
binary: binary-indep binary-arch

binary-indep:
	# nothing to be done

binary-arch:
	cd $(BUILDDIR); cmake -P cmake_install.cmake
	mkdir debian/tmp/DEBIAN
	dpkg-gencontrol
	rm debian/control
	debian/python_control.py debian/tmp/DEBIAN/control debian/control
	cp debian/postinst debian/tmp/DEBIAN
	dh_md5sums
	dpkg --build debian/tmp ..

# firstly called by launchpad
clean:
	rm -rf debian/tmp
	rm -f debian/files
	rm -f debian/*.debhelper.log
	rm -rf $(BUILDDIR)

.PHONY: binary binary-arch binary-indep clean
